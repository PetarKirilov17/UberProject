@using Uber.Models.Account;
@model LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properties -->
    <title>Uber - Login</title>
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/reset.css">
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/site.css">                    
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/container.css">
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/grid.css">
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/header.css">
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/image.css">
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/menu.css">                         
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/divider.css">
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/segment.css">
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/form.css">
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/input.css">
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/button.css">
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/list.css">
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/message.css">
    <link rel="stylesheet" type="text/css" href="~/lib/fomantic-ui/dist/components/icon.css">

    
    <style type="text/css">
        body {
            background-color: #DADADA;
        }

            body > .grid {
                height: 100%;
            }

        .image {
            /*margin-top: -100px;*/
        }

        .column {
            max-width: 450px;
        }
    </style>
    <script>
        $(document)
            .ready(function () {
                $('.ui.form')
                    .form({
                        fields: {
                            email: {
                                identifier: 'email',
                                rules: [
                                    {
                                        type: 'empty',
                                        prompt: 'Please enter your e-mail'
                                    },
                                    {
                                        type: 'email',
                                        prompt: 'Please enter a valid e-mail'
                                    }
                                ]
                            },
                            password: {
                                identifier: 'password',
                                rules: [
                                    {
                                        type: 'empty',
                                        prompt: 'Please enter your password'
                                    },
                                    {
                                        type: 'length[6]',
                                        prompt: 'Your password must be at least 6 characters'
                                    }
                                ]
                            }
                        }
                    })
                    ;
            })
            ;
    </script>
</head>
<body>

    <div class="ui middle aligned center aligned grid">
        <div class="column">
            
            <form class="ui large form" method="post">
                <div class="ui stacked segment">
                    <div class="ui container">
                        <div class="ui center aligned">
                            <img class="ui tiny middle aligned center aligned circular image" src="@Url.Content("~/imagesDemo/uberIcon.png")">
                        </div>
                        <div class="ui ceneter aligned top aligned dividing header">
                            <h2 class="content middle aligned top aligned">
                                Log-in to your account
                            </h2>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="email" asp-for="Email" placeholder="Type your email">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="password" asp-for="Password" placeholder="Type your password">
                        </div>
                    </div>
                    <div class="ui checkbox">
                        <input type="checkbox" tabindex="0" asp-for="RememberMe" class="hidden">
                        <label>Remember me</label>
                    </div>
                    
                    <div class="ui fluid large yellow submit animated fade button">
                        <div class="visible content">
                           Login
                        </div>
                        <div class="hidden content">
                            <i class="sign in alternate icon"></i>
                            <button type="submit" asp-controller="Account" asp-action="Login"></button>
                        </div>
                    </div>
                </div>

                <div class="ui error message"></div>

            </form>

            <div class="ui message">
                <div class="ui row">
                    You don't have an account yet? <a asp-action="Register" asp-controller="Account">Sign Up</a>
                </div>
                <div class="ui row miidle aligned center aligned">
                    <a asp-action="ForgotPassword" asp-controller="Account">Forgot your password?</a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/fomantic-ui/dist/components/form.js"></script>
    <script src="~/lib/fomantic-ui/dist/components/transition.js"></script>

</body>

</html>